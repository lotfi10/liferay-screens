<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_screenlet">

    <EditText
        android:id="@+id/login"
        style="@style/default_edit_text"
        android:drawableLeft="@drawable/default_mail_icon"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:text="test@liferay.com" />

    <EditText
        android:id="@+id/password"
        style="@style/default_edit_text"
        android:drawableLeft="@drawable/default_lock_icon"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:text="test" />

    <Button
        android:id="@+id/login_button"
        style="@style/default_submit_button"
        android:text="@string/sign_in" />
</com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView>